<div class="form-group">
  <%= form_for :course, url: user_cources_path(@current_person.id), method: :post do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title, class:"form-control" %>
    </p>
   
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body, class:"form-control" %>
    </p>
   
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>